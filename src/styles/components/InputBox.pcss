@import url('../variables.pcss');

.InputBox {
  background-color:transparent;
  border: none;
  border-bottom: 2px solid black;
  margin-left: 5px;
  text-align: center;

  &.error {
    border-color: var(--error);
  }

  &:focus {
    border-color: var(--primary);
  }

  &.correct {
    border-color: var(--correct);
  }
}